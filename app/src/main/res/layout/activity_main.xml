<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:background="@android:drawable/edit_text"
        android:ems="20"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:onClick="acao"
        android:id="@+id/b7"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_toStartOf="@id/b8"
        android:layout_marginTop="50dp"
        android:text="7"
        android:textSize="20dp"
        android:tag="7"/>

    <Button
        android:onClick="acao"
        android:id="@+id/b8"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b7"
        android:layout_toLeftOf="@id/b9"
        android:text="8"
        android:textSize="20dp"
        android:tag="8"/>

    <Button
        android:onClick="acao"
        android:id="@+id/b9"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b7"
        android:layout_centerHorizontal="true"
        android:text="9"
        android:textSize="20dp"
        android:tag="9"/>

    <Button
        android:onClick="acao"
        android:id="@+id/bdiv"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b9"
        android:layout_toRightOf="@id/b9"
        android:text="/"
        android:textSize="20dp"
        android:tag="/"/>

    <Button
        android:onClick="acao"
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bdiv"
        android:layout_toRightOf="@id/bdiv"
        android:text="b"
        android:textSize="20dp"
        android:tag="back"/>

    <Button
        android:onClick="acao"
        android:id="@+id/b4"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b7"
        android:layout_toLeftOf="@id/b8"
        android:text="4"
        android:textSize="20dp"
        android:tag="4"/>

    <Button
        android:onClick="acao"
        android:id="@+id/b5"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b4"
        android:layout_toLeftOf="@id/b6"
        android:text="5"
        android:textSize="20dp"
        android:tag="5"/>

    <Button
        android:onClick="acao"
        android:id="@+id/b6"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b5"
        android:layout_centerHorizontal="true"
        android:text="6"
        android:textSize="20dp"
        android:tag="6"/>

    <Button
        android:onClick="acao"
        android:id="@+id/bmult"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b6"
        android:layout_toRightOf="@id/b6"
        android:text="x"
        android:textSize="20dp"
        android:tag="x"/>

    <Button
        android:onClick="acao"
        android:id="@+id/clean"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b6"
        android:layout_toRightOf="@id/bmult"
        android:text="C"
        android:textSize="20dp"
        android:tag="clean"/>

    <Button
        android:onClick="acao"
        android:id="@+id/b1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b4"
        android:layout_toLeftOf="@id/b2"
        android:text="1"
        android:textSize="20dp"
        android:tag="1"/>

    <Button
        android:onClick="acao"
        android:id="@+id/b2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b1"
        android:layout_toLeftOf="@id/b3"
        android:text="2"
        android:textSize="20dp"
        android:tag="2"/>

    <Button
        android:onClick="acao"
        android:id="@+id/b3"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b2"
        android:layout_centerHorizontal="true"
        android:text="3"
        android:textSize="20dp"
        android:tag="3"/>

    <Button
        android:onClick="acao"
        android:id="@+id/bsub"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b3"
        android:layout_toRightOf="@id/b3"
        android:text="-"
        android:textSize="20dp"
        android:tag="-"/>

    <Button
        android:onClick="acao"
        android:id="@+id/igual"
        android:layout_width="60dp"
        android:layout_height="98dp"
        android:layout_alignTop="@+id/b3"
        android:layout_toRightOf="@id/bsub"
        android:text="="
        android:textSize="20dp"
        android:tag="igual"/>

    <Button
        android:onClick="acao"
        android:id="@+id/b0"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b1"
        android:layout_toLeftOf="@id/bponto"
        android:layout_alignLeft="@+id/b1"
        android:text="0"
        android:textSize="20dp"
        android:tag="0"/>

    <Button
        android:onClick="acao"
        android:id="@+id/bponto"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b0"
        android:layout_centerHorizontal="true"
        android:text="."
        android:textSize="20dp"
        android:tag="."/>

    <Button
        android:id="@+id/bsoma"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b0"
        android:layout_toRightOf="@id/bponto"
        android:text="+"
        android:textSize="20dp"
        android:tag="+"
        android:onClick="acao"/>

</RelativeLayout>